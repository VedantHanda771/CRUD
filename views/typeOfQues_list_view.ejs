<%- include("header") %>
<%- include("header2") %>

<div style="border: 2px solid #ddd; padding: 20px; width: 900px; margin: 20px auto; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <div style="text-align: center; margin-bottom: 20px;">
        <a href="/addTypeOfQues" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Add Type of Question</a>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <h3 class="panel-title">Type of Question List</h3>
        </div>
    <table class="table table-bordered" align="center">
        <thead>
            <tr>
                <th>T_name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let type of typeOfQuesList) { %>
                <tr>
                    <td><%= type.T_name %></td>
                    <td>
                        <a href="/editTypeOfQues?typeid=<%= type._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/deleteTypeOfQues?typeid=<%= type._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this type of question?')">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    </div>
</div>

</body>
</html>
