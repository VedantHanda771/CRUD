<%- include("header") %>


<div style="border: 2px solid #ddd; padding: 20px; width: 900px; margin: 50px auto; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <div style="text-align: center; margin-bottom: 20px;">
        <a href="/addCourse" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Add Course</a>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <h3 class="panel-title">Course List</h3>
        </div>
    <table class="table table-striped table-bordered" align="center">
        <thead>
            <tr>
                <th>Course_name</th>
                <th>Course_price</th>
                <th>Course_description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let course of courseList) { %>
                <tr>
                    <td><%= course.Course_name %></td>
                    <td><%= course.Course_price %></td>
                    <td><%= course.Course_description %></td>
                    <td>
                        <a href="/editCourse?courseid=<%= course._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/deleteCourse?courseid=<%= course._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
</div>

</body>
</html>
