<%- include("header") %>
<%- include("header2") %>

<div style="border: 2px solid #ddd; padding: 20px; width: 900px; margin: 50px auto; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <div style="text-align: center; margin-bottom: 20px;">
        <a href="/addDifficulty" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Add Difficulty Level</a>
    </div>
    <table class="table table-striped table-bordered" style="width: 100%; text-align: center;">
        <thead>
            <tr>
                <th>D_value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let diff of difficultyList) { %>
                <tr>
                    <td><%= diff.D_value %></td>
                    <td>
                        <a href="/editDifficulty?diffid=<%= diff._id %>" class="btn btn-warning btn-sm" style="margin-right: 5px;">Edit</a>
                        <a href="/deleteDifficulty?diffid=<%= diff._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

</body>
</html>
