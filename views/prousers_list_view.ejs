<%- include("header") %>


<div style="border: 2px solid #ddd; padding: 20px; width: 900px; margin: 50px auto; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <div style="text-align: center; margin-bottom: 20px;">
        <a href="/addprouser" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Add Professional User</a>
    </div>
    <table class="table table-striped" align="center">
        <thead>
            <tr>
                <th>P_name</th>
                <th>P_email</th>
                <th>P_dob</th>
                <th>P_status</th>
                <th>P_StartDate</th>
                <th>P_endDate</th>
                <th>Course_id</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let user of proUserList) { %>
                <tr>
                    <td><%= user.P_name %></td>
                    <td><%= user.P_email %></td>
                    <td><%= user.P_dob %></td>
                    <td><%= user.P_status %></td>
                    <td><%= user.P_StartDate %></td>
                    <td><%= user.P_endDate %></td>
                    <td><%= user.Course_id %></td>
                    <td><%= user.Status %></td>
                    <td>
                        <a href="/editprouser?prouserid=<%= user._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/deleteprouser?prouserid=<%= user._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

</body>
</html>
