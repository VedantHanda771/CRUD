<%- include("header") %>
<%- include("header2") %>

<div style="border: 2px solid #ddd; padding: 20px; width: 900px; margin: 50px auto; margin-top: -1%; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <h2 style="text-align: center; color: #343a40; margin-bottom: 20px;">Add Question</h2>
    <form action="/addQuesSubmit" method="post">
        <table class="table table-striped table-bordered">
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Q_name</td>
                <td><input type="text" name="q_name" required class="form-control" style="width: 100%;"></td>
            </tr>
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Q_explanation</td>
                <td><input type="text" name="q_explanation" required class="form-control" style="width: 100%;"></td>
            </tr>
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Q_input</td>
                <td><input type="text" name="q_input" required class="form-control" style="width: 100%;"></td>
            </tr>
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Q_output</td>
                <td><input type="text" name="q_output" required class="form-control" style="width: 100%;"></td>
            </tr>
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">TypeOfQues</td>
                <td>
                    <select name="type_of_ques" required class="form-control" style="width: 100%;">
                        <option value="array">Array</option>
                        <option value="string">String</option>
                        <option value="number">Number</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Solved</td>
                <td>
                    <select name="solved" required class="form-control" style="width: 100%;">
                        <option value="YES">YES</option>
                        <option value="NO">NO</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Comp_name</td>
                <td><input type="text" name="comp_name" required class="form-control" style="width: 100%;"></td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center;">
                    <button type="submit" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Add Question</button>
                </td>
            </tr>
        </table>
    </form>
</div>

</body>
</html>
