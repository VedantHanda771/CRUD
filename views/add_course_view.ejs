<%- include("header") %>

<div style="border: 2px solid #ddd; padding: 20px; width: 900px; margin: 50px auto; margin-bottom: -20%; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <h2 style="text-align: center; color: #343a40; margin-bottom: 20px;">Add Course</h2>
    <form action="/addCourseSubmit" method="post">
        <table class="table table-striped table-bordered">
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Course_name</td>
                <td><input type="text" name="Course_name" required class="form-control" style="width: 100%;"></td>
            </tr>
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Course_price</td>
                <td><input type="text" name="Course_price" required class="form-control" style="width: 100%;"></td>
            </tr>
            <tr>
                <td style="width: 30%; font-weight: bold; color: #343a40; text-align: center;">Course_description</td>
                <td><textarea name="Course_description" required class="form-control" rows="4" style="width: 100%;"></textarea></td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center;">
                    <button type="submit" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Add Course</button>
                </td>
            </tr>
        </table>
    </form>
</div>

</body>
</html>
