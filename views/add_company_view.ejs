<%- include("header") %>
<%- include("header2") %>

<div style="border: 2px solid #ddd; padding: 20px; width: 700px; margin: 50px auto; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <h3 style="text-align: center; margin-bottom: 30px; color: #343a40;">Add Company</h3>
    <form action="/addCompanySubmit" method="post">
        <div class="form-group">
            <label for="Company_name" style="font-weight: bold; color: #343a40;">Company Name</label>
            <input type="text" name="Company_name" id="Company_name" required class="form-control" style="border-radius: 4px; border: 1px solid #ced4da;">
        </div>
        <div style="text-align: center; margin-top: 30px;">
            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 10px; font-size: 16px; border-radius: 4px;">Add Company</button>
        </div>
    </form>
</div>

</body>
