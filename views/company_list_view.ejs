<%- include("header") %>
<%- include("header2") %>

<div style="border: 2px solid #ddd; padding: 20px; width: 900px; margin: 50px auto; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <div style="text-align: center; margin-bottom: 20px;">
        <a href="/addCompany" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Add Company</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="text-align: center; font-weight: bold; color: #343a40;">Company Name</th>
                <th style="text-align: center; font-weight: bold; color: #343a40;">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let company of companyList) { %>
                <tr>
                    <td style="text-align: center; vertical-align: middle;"><%= company.Company_name %></td>
                    <td style="text-align: center; vertical-align: middle;">
                        <a href="/editCompany?companyid=<%= company._id %>" class="btn btn-warning" style="margin-right: 10px;">Edit</a>
                        <a href="/deleteCompany?companyid=<%= company._id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

</body>
</html>
